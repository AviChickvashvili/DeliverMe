<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_for_baclround"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView"
        android:layout_width="134dp"
        android:layout_height="56dp"
        android:layout_marginTop="96dp"
        android:text="הרשמה"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userName_id"
        android:layout_width="211dp"
        android:layout_height="44dp"
        android:layout_marginBottom="499dp"
        android:ems="10"
        android:hint="שם מלא"
        android:inputType="textPersonName"
        android:textColorHint="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/user_phone"
        android:layout_width="211dp"
        android:layout_height="44dp"
        android:layout_marginBottom="390dp"
        android:ems="10"
        android:hint="טלפון"
        android:gravity="right"
        android:inputType="phone"
        android:textColorHint="#80000000"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/mail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint='דוא"ל'
        android:inputType="textEmailAddress"
        android:textColorHint="#80000000"
        app:layout_constraintStart_toStartOf="@+id/userName_id"
        app:layout_constraintTop_toBottomOf="@+id/userName_id" />

    <EditText
        android:id="@+id/Password_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:hint="                                 סיסמה "
        android:inputType="textPassword"
        android:textColorHint="#80000000"
        app:layout_constraintEnd_toEndOf="@+id/mail_id"
        app:layout_constraintTop_toBottomOf="@+id/mail_id" />

    <Button
        android:id="@+id/Reg_id"
        android:layout_width="236dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:background="@drawable/button"
        android:shadowColor="#120205"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="הירשם"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/connect_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password_id" />

    <TextView
        android:id="@+id/connect_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="240dp"
        android:shadowColor="#FFFFFF"
        android:text="משתמש קיים? התחבר כאן"
        android:textColorHint="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/Loading_id"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="164dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>