<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView"
        android:layout_width="154dp"
        android:layout_height="56dp"
        android:layout_marginTop="96dp"
        android:text="הרשמה"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userName_id"
        android:layout_width="217dp"
        android:layout_height="45dp"
        android:layout_marginBottom="472dp"
        android:ems="10"
        android:hint="שם מלא"
        android:inputType="textPersonName"
        android:textColorHint="#80000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/mail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint='דוא"ל'
        android:inputType="textEmailAddress"
        android:textColorHint="#80000000"
        app:layout_constraintStart_toStartOf="@+id/userName_id"
        app:layout_constraintTop_toBottomOf="@+id/userName_id" />

    <EditText
        android:id="@+id/Password_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:hint="                                 סיסמה "
        android:inputType="textPassword"
        android:textColorHint="#80000000"
        app:layout_constraintEnd_toEndOf="@+id/mail_id"
        app:layout_constraintTop_toBottomOf="@+id/mail_id" />

    <Button
        android:id="@+id/Reg_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="הירשם"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password_id" />

    <TextView
        android:id="@+id/connect_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="264dp"
        android:text="משתמש קיים? התחבר כאן"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/Loading_id"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.07" />

</androidx.constraintlayout.widget.ConstraintLayout>